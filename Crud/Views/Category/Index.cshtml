@addTagHelper *,Microsoft.AspNetCore.Identity.EntityFramework
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model IEnumerable<Crud.Models.Category>

@{
    ViewData["Title"] = "Index";
    Layout = "_Layout";
}

<h1>Customer List</h1>

<p>
    <a asp-action="Create"></a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CategoryID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CategoryName)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model)
        {
            <tr>
               <td>
                    @Html.DisplayFor(modelCategory => category.CategoryID)
               </td>
               <td>
                   @Html.DisplayFor(modelCategory => category.CategoryName)
               </td>
               <td>
                    @Html.ActionLink("Create", "Create", new { CategoryId = category.CategoryID }) |
                    @Html.ActionLink("Edit", "Edit", new { CategoryId = category.CategoryID }) |
                    @Html.ActionLink("Delete", "Delete", new { CategoryId = category.CategoryID }) 
               </td>
            </tr>
        }
    </tbody>
</table>
