@addTagHelper *,Microsoft.AspNetCore.Identity.EntityFramework
@addTagHelper *,Microsoft.AspNetCore.Mvc.TagHelpers
@model Crud.Models.Category

@{
    ViewData["Title"] = "Create";
    Layout = "_Layout";
}

<h1>Create</h1>
<p>
    <a asp-action="Create">Create category</a>
</p>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Store" asp-controller="Category" method="post">
            <div asp-validation-summary="ModelOnly" class="text-bg-danger"></div>

            <div class="form-group">
                <label asp-for="CategoryName" class="control-label">Category Name</label>
                <input type="text" asp-for="CategoryName" class="form-control" />
                <span asp-validation-for="CategoryName" class="text-bg-danger"></span>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn btn-success">Create New</button>
            </div>

        </form>
    </div>
</div>
<div >
    <a asp-action="Index" class="btn btn-primary">Back Index Page</a>
</div>
