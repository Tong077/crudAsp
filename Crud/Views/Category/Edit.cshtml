@addTagHelper *,Microsoft.AspNetCore.Identity.EntityFramework
@addTagHelper *,Microsoft.AspNetCore.Mvc.TagHelpers
@model Crud.Models.Category

@{
    ViewData["Title"] = "Edit";
    Layout = "_Layout";
}

<h1>Edit Category</h1>

<div class="row">
    <div class="col-md-4">
       <form asp-action="Update" asp-controller="Category" method="post">
           <div class="text-bg-danger" asp-validation-summary="ModelOnly"></div>
           <input asp-for="CategoryID" type="hidden" />

           <div class="form-group">
               <label asp-for="CategoryName" class="control-label"></label>
               <input asp-for="CategoryName" type="text" class="form-control" />
               <span asp-validation-for="CategoryName" class="text-bg-danger"></span>
           </div>
           <div>
                <button class="btn btn-primary" type="submit">Save Change</button>
           </div>
       </form>
    </div>
</div>
<div>
    <a asp-action="Index" class="btn btn btn-secondary">Back Index Page</a>
</div>